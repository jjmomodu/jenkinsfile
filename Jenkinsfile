pileline {

  	agent any

	  stage {

	  	stage("Build") {

			  	steps {
				  	  echo 'building the application...'
			  	}
		  	}

	  	stage("Test") {

				  steps {
					    echo 'Testing the application...'
				  }
			  }

		  stage("Release") {

				  steps {
					    echo 'Releaseing the application...'
				  }
		  	}

		  stage("Deploy") {

				  steps {
					    echo 'Deploying the application...'
				  }
			  }
	  	}
  	}
  }
